<UserControl x:Class="proyectoIIIç.Doble"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:proyectoIIIç"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10" Background="White">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="10">

                <!-- SECCIÓN LISTA DOBLEMENTE ENLAZADA -->
                <Label Content="LISTA DOBLEMENTE ENLAZADA" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Dato Doble:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtDoble" Width="100" Margin="5,0,5,0"/>

                    <Button x:Name="btnAgregarInicioDoble" Content="Agregar Inicio (D)" 
                    Width="120" Margin="5,0,5,0"
                    Click="btnAgregarInicioDoble_Click"/>
                    <Button x:Name="btnAgregarFinalDoble" Content="Agregar Final (D)" 
                    Width="110" Margin="5,0,5,0"
                    Click="btnAgregarFinalDoble_Click"/>

                    <Button x:Name="btnEliminarInicioDoble" Content="Eliminar Inicio (D)" 
                    Width="120" Margin="5,0,5,0"
                    Click="btnEliminarInicioDoble_Click"/>
                    <Button x:Name="btnEliminarFinalDoble" Content="Eliminar Final (D)" 
                    Width="110" Margin="5,0,5,0"
                    Click="btnEliminarFinalDoble_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="btnEstaVacioDoble" Content="¿Está Vacío? (D)" 
                    Width="120" Margin="5,0,5,0"
                    Click="btnEstaVacioDoble_Click"/>
                    <TextBox x:Name="txtEstaVacioDoble" Width="80" Margin="5,0,5,0" IsReadOnly="True"/>

                    <Button x:Name="btnMayorDoble" Content="Encontrar Mayor (D)" 
                    Width="120" Margin="5,0,5,0"
                    Click="btnMayorDoble_Click"/>
                    <TextBox x:Name="txtMayorDoble" Width="80" Margin="5,0,5,0" IsReadOnly="True"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="btnSumarDoble" Content="Sumar Elementos (D)"
                    Width="120" Margin="5,0,5,0"
                    Click="btnSumarDoble_Click"/>
                    <TextBox x:Name="txtSumaDoble" Width="80" Margin="5,0,5,0" IsReadOnly="True"/>

                    <Button x:Name="btnModaDoble" Content="Encontrar Moda (D)" 
                    Width="120" Margin="5,0,5,0"
                    Click="btnModaDoble_Click"/>
                    <TextBox x:Name="txtModaDoble" Width="80" Margin="5,0,5,0" IsReadOnly="True"/>
                </StackPanel>

                <Button x:Name="btnOrdenarDescDoble" Content="Ordenar Desc (D)" 
                Width="150" Margin="5,0,5,0"
                Click="btnOrdenarDescDoble_Click"/>

                <Separator Margin="0,10,0,10"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
