<UserControl x:Class="proyectoIIIç.OrdenamientoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:proyectoIIIç"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Fila para el ingreso de datos y botón Agregar -->
            <RowDefinition Height="Auto"/>
            <!-- Fila para el DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Fila para ComboBox y RadioButtons -->
            <RowDefinition Height="Auto"/>
            <!-- Fila para botón Ordenar -->
            <RowDefinition Height="*"/>
            <!-- Fila final expandible si se requiere -->
        </Grid.RowDefinitions>

        <!-- 1) Ingreso de datos y botón AGREGAR -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Números:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtNumeros" Width="250" Margin="5,0,0,0"
                     ToolTip="Ingresa números separados por comas o espacios (ej: 10, 3, 5)"/>
            <Button x:Name="btnAgregar" Content="Agregar" Width="60"
                    Click="btnAgregar_Click" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- 2) DataGrid para mostrar los datos actuales -->
        <DataGrid x:Name="dgDatos" Grid.Row="1" AutoGenerateColumns="False" 
                  Width="400" Height="150" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Valor" Binding="{Binding}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- 3) ComboBox (métodos) y RadioButtons (orden) -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Label Content="Método:" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbMetodos" Width="150" Margin="5,0,0,0">
                    <ComboBoxItem Content="BubbleSort"/>
                    <ComboBoxItem Content="InsertionSort"/>
                    <ComboBoxItem Content="SelectionSort"/>
                    <ComboBoxItem Content="QuickSort"/>
                    <ComboBoxItem Content="MergeSort"/>
                </ComboBox>
            </StackPanel>

            <GroupBox Header="Orden" Margin="0,5,0,0" Padding="5">
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="rdbAsc" Content="Ascendente" IsChecked="True" Margin="5"/>
                    <RadioButton x:Name="rdbDesc" Content="Descendente" Margin="5"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- 4) Botón para Ordenar -->
        <Button x:Name="btnOrdenar" Grid.Row="3" Content="Ordenar" Width="80" 
                Click="btnOrdenar_Click" HorizontalAlignment="Left"/>
        <Button Content="Limpiar" Grid.Row="3" Width="80" HorizontalAlignment="Left" Margin="100,0,0,0" Click="Button_Click"/>
    </Grid>
</UserControl>
