<Window x:Class="proyectoIIIç.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyectoIIIç"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Definimos las filas y columnas -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Para el menú -->
            <RowDefinition Height="*"/>
            <!-- Para el contenido principal -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Panel lateral -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="0" Background="LightGray">
            <Button Content="Pilas y Colas" Height="40" Margin="10" Click="BtnPilasColas_Click"/>
            <Button Content="Listas Enlazadas" Height="40" Margin="10" Click="BtnListas_Click"/>
            <Button Content="Métodos de Ordenamiento" Height="40" Margin="10" Click="BtnOrdenamiento_Click"/>
            <Button Content="Calculadora - Pila" Height="40" Margin="10" x:Name="BtnCalculadora" Click="BtnCalculadora_Click"/>
        </StackPanel>

        <ContentControl Grid.Row="1" Grid.Column="1" x:Name="Contenido"/>
    </Grid>
</Window>
